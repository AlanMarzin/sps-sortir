{% extends 'base.html.twig' %}

{% block title %}Création d'un lieu{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styleNewLieu.css') }}">
{% endblock %}

{% block body %}

    <div class="container-info">
        <h1>Créer un lieu</h1>
        <div class="erreurform">
            {% if not lieuForm.vars.valid%}
                <h2> Erreur :</h2>
                    {{ form_errors(lieuForm.nom) }}
                    {{ form_errors(lieuForm.rue) }}
                    {{ form_errors(lieuForm.latitude) }}
                    {{ form_errors(lieuForm.longitude) }}
                    {{ form_errors(lieuForm.ville) }}
            {% endif %}
        </div>
        {# Formulaire de modification du profil utilisateur #}
        {{ form_start(lieuForm, { 'attr' : { 'class': 'form_lieu' } })}}
                     {{ form_label(lieuForm.nom) }}
                    {{ form_widget(lieuForm.nom) }}

                    {{ form_label(lieuForm.rue) }}
                    {{ form_widget(lieuForm.rue) }}

                    {{ form_label(lieuForm.latitude) }}
                    {{ form_widget(lieuForm.latitude) }}

                    {{ form_label(lieuForm.longitude) }}
                    {{ form_widget(lieuForm.longitude) }}

                    {{ form_label(lieuForm.ville) }}
                    {{ form_widget(lieuForm.ville) }}
                <div class="boutons"><button>Valider</button></div>
        {{ form_end(lieuForm) }}
        {# Bouton de retour vers la page de création de sortie #}
        <div class="boutons">
            <a href="{{ path('sortie_new') }}"><button>Annuler</button></a>
        </div>
    </div>


{% endblock %}