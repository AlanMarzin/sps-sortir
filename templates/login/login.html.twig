{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Se connecter{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styleLogin.css') }}">
{% endblock %}

{% block nav %}{% endblock %}

{% block body %}
    {% if error is not null %}
     <div class="flash flash-error">Le mot de passe ou l'identifiant est incorrect !</div>
    {% endif %}
            <div class="login-card">
                <h2>CONNEXION</h2>
                <h3> Entrez vos identifiants </h3>
                    <form class="login-form" action="{{ path('app_login') }}" method="post">
                            <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                            <input type="password" id="password" name="_password"/>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="remember">
                                    Se souvenir de moi
                                    <input  type="checkbox" name="_remember_me" checked/>
                                </div>
                            <button type="submit">Se connecter</button>
                    </form>
            </div>

{% endblock %}


